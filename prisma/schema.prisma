generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model User {
  id            String         @id @default(uuid())
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  name          String?
  email         String?        @unique
  phone         String?
  preferences   Preference[]
  conversations Conversation[]
}

model Conversation {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  messages  Message[]
}

model Message {
  id             String       @id @default(uuid())
  createdAt      DateTime     @default(now())
  role           MessageRole
  content        String
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
}

model Preference {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  zona           String?
  tipoPropiedad  String?
  recamaras      Int?
  presupuestoMax Int?
  compraORenta   String?
}

enum MessageRole {
  system
  user
  assistant
  function
}
